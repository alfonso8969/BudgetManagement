@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="card card-login">
    <h1 class="bg-gradient text-center">Login</h1>
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control w-50" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control w-50" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>

            <button class="btn-primary btn">Login</button>
            <div class="align-self-center mt-3">
                <span>Don´t have a account?</span>
                <a class="link-dark text-info text-decoration-none" asp-controller="users" asp-action="register">Create a new account</a>

                <div class="mt-3 text-center" style="margin-right: 3%">
                    <a class="link-dark text-info text-decoration-none" asp-action="forgetMyPassword">Forgot your password?</a>
                </div>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
