@model Category
@{
    ViewData["Title"] = "Create category";
}

<h2>Create category</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control w-25" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="OperationTypeId" class="control-label"></label>
        <select asp-for="OperationTypeId" class="form-select w-25" asp-items="Html.GetEnumSelectList<OperationType>()"></select>
        <span asp-validation-for="OperationTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}