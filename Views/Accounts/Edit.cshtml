@model AccountCreateViewModel
@{
    ViewData["Title"] = "Edit Account";
}

<h1>Edit Account: @Model.Name</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control w-50" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="AccountTypeId"></label>
        <select asp-for="AccountTypeId" asp-items="Model.AccountsTypes" class="form-control w-50"></select>
        <span asp-validation-for="AccountTypeId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" class="form-control w-50" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control w-50"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-controller="Accounts" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}