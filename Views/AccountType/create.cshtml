@model AccountType

@{
    ViewData["Title"] = "Create Account Type";
}


<h1>Create a Account Type</h1>

<div class="row">
    <div class="col">
        <div class="container">
            <h5>
                Account type refers to how we can group accounts.
                Example: Loans, credit cards, etc.
            </h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-controller="AccountType" asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control w-25" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-controller="AccountType" asp-action="Index" class="btn btn-secondary">Back</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}